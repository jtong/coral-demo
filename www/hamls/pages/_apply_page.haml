%header(ng-switch=true on="sign_up_status()")
  %h4 报名
  .header-right(ng-switch-when="started")
    %a( ng-tap="end_apply()"  class="btn btn-primary")
      结束报名
  .header-right(ng-switch-default=true)
    %a(ng-tap="start_apply()"  class="btn btn-primary")
      开始报名
  .header-left
    %a(ng-tap="$navigate.go('/', 'slide')"  class="btn")
      返回


#wrapper.scrollable
  %ul.survey-list
    %li(ng-repeat="player in players" )
      %a
        %h3 {{player}}
        %p

%footer
  %ul(class="footer-nav footer-nav-2tabs" )
    %li
      %a.active(ng-tap="$navigate.go('/sign_ups/list/{{activity_name}}')")
        %h5 报名
    %li
      %a(ng-tap ="$navigate.go('/bids/list/{{activity_name}}')")
        %h5 竞价